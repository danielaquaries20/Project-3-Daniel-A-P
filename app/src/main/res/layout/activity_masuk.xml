<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="@dimen/value17sdp"
    tools:context=".ActivityMasuk">

    <TextView
        android:id="@+id/textMasukApp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/value20sdp"
        android:text="@string/selamat_masuk_aplikasi"
        android:textAlignment="center"
        android:textColor="@color/colorBlack"
        android:textSize="@dimen/value20ssp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/buttonBack"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/button_background_one"
        android:text="@string/back"
        android:textColor="@color/colorWhite"
        android:textSize="@dimen/value20ssp" />

</LinearLayout>